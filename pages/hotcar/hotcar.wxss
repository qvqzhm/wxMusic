/* pages/hotcar/hotcar.wxss */
.main{
  padding: 10rpx 30rpx;
  box-sizing: border-box;
}
.list{
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}
.car{
  width: 49%;
  margin-bottom: 20rpx;
}
.top{
  position: relative;
}
.top view{
  position: absolute;
  bottom: 20rpx;
  right: 20rpx;
  font-size: 12px;
  color: white;
  padding: 10rpx 20rpx;
  background: rgba(0, 0, 0, .3);
  border-radius: 20rpx;
  display: flex;
  align-items: center;
}
.top view image{
  width: 20rpx;
}
.bg{
  width: 100%;
  border-radius: 30rpx;
}
.txt{
  margin-top: 5rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  word-break: break-all;
}
