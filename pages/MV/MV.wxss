/* pages/MV/MV.wxss */
.page{
  background:#f7f7f7;
  padding: 30rpx;
  box-sizing: border-box;
}
.acl{
  font-size: 18px;
  font-weight: bold;
}
.tc{
  margin-right: 30rpx;
}
.weui-tabs-bar__content{
  background:#f7f7f7;
}
.wc{
  width: 100%;
  height: 500px;
}
.tuijianview{
  width: 100%;
  height: 500px;
  padding: 40rpx 0;
  box-sizing: border-box;
  
}
.b{
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}
.tuijianList{
  width: 49%;
  max-height: 344rpx;
  background: white;
  border-radius: 30rpx;
  overflow: hidden;
  padding-bottom:20rpx;
  margin-bottom: 20rpx;
}
.img{
  height: 240rpx;
  position: relative;
}
.img_info{
  width: 100%;
  position: absolute;
  bottom: 0rpx;
  display: flex;
  padding: 10rpx 20rpx;
  z-index: 99;
  color: white;
  box-sizing: border-box;
  justify-content: space-between;
  font-size: 12px;
  align-items: center;
}
.left{
  display: flex;
  align-items: center;
  width: 100%;
}
.ic{
  width: 50rpx;
  margin-right: 10rpx;
}
.big{
  width: 100%;
  height: 100%;
}
.txt{
  padding: 0 10rpx;
  word-break: break-all;
  overflow: hidden;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2
}